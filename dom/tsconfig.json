{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "lib": ["dom", "es5", "scripthost", "es2015.promise", "es2015.iterable"],
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": true, // 单步跟踪调试时需要
    "strict":true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.spec.ts"
  ]
}